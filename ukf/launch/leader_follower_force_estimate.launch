<launch>
<arg name="mav_name" default="firefly" />

<group ns = "leader_ukf">
   <node pkg="ukf" name="ukf_1" type="force_estimatee" output="screen" >
     <param name="topic_imu" value="/$(arg mav_name)1/imu" />
     <param name="topic_mocap" value="/$(arg mav_name)1/ground_truth/odometry" />
     <param name="topic_drone" value="1" />
   </node>
</group>

<group ns = "follower_ukf">
   <node pkg="ukf" name="ukf_2" type="force_estimatee" output="screen" >
     <param name="topic_imu" value="/$(arg mav_name)2/imu" />
     <param name="topic_mocap" value="/$(arg mav_name)2/ground_truth/odometry" />
     <param name="topic_drone" value="2" />
   </node>
</group>

<node name="payload_ukf" pkg="payload_measure" type="so3" output="screen" />

</launch>
